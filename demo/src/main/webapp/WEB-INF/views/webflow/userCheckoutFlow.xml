<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
                          
        
         <on-start>
             <evaluate expression="flowController.initFlow()" result="flowScope.order"/>
       </on-start>
        
        <view-state id="yourcart" model="order">
             <transition on="next" to="selectPizza">
                 <evaluate expression="pizzaOrderController.validateCust(flowScope.order, messageContext)"/>
            </transition>     
            <transition on="cancel" to="cancelOrder" />
        </view-state>
        
	<action-state id="validate">
		<evaluate expression="demohandler.validateDetails(userBean,messageContext)"></evaluate>
		<transition on="success" to="confirmDetails" />
		<transition on="failure" to="start" />
	</action-state>
                          
</flow>